    <script>
        // Notion-Link hier einf√ºgen:
        const NOTION_LINK = "https://notion.so/DEINE-ID-HIER";
        
        function openNotion() {
            window.location.href = NOTION_LINK;
        }

        function shareList() {
            if (navigator.share) {
                navigator.share({
                    title: 'Meine Wunschliste',
                    text: 'Schau meine Wunschliste an!',
                    url: window.location.href
                });
            } else {
                alert('Link kopiert!');
                navigator.clipboard.writeText(window.location.href);
            }
        }

        // Optional: Notion API laden
        console.log('üéÅ Wunschliste geladen');
    </script>
